{
	"name": "ingenyus/configure-environment-plugins",
	"description": "WordPress MU plugin to enable or disable plugins in specific environments",
	"homepage": "https://github.com/Genyus/Configure-Environment-Plugins",
	"keywords": [
		"wordpress"
	],
	"license": "GPL-2.0+",
	"authors": [
		{
			"name":"Ingenyus Consulting Ltd",
			"email":"mail@ingenyus.com",
			"homepage":"https://ingenyus.com/"
		}
	],
	"support"    : {
			"issues": "https://github.com/Genyus/Configure-Environment-Plugins/issues",
			"source": "https://github.com/Genyus/Configure-Environment-Plugins"
	},
	"type": "wordpress-muplugin",
	"require": {
		"composer/installers": "^2.0"
	 },
	 "require-dev": {
	   "squizlabs/php_codesniffer": "3.*",
	   "dealerdirect/phpcodesniffer-composer-installer": "*",
	   "wp-coding-standards/wpcs": "*",
	   "phpcompatibility/phpcompatibility-wp": "*",
	   "automattic/phpcs-neutron-ruleset": "^3.4"
	 },
	 "scripts": {
	   "cs": "phpcs --standard=.phpcs.xml .",
	   "cbf": "phpcbf --standard=.phpcs.xml ."
	 },
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
